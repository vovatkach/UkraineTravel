<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.vovatkach2427gmail.ukrainetravel.Act.PlaceAct"
    tools:showIn="@layout/place_act">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">
      <android.support.v7.widget.CardView
          android:id="@+id/cv_place_carousel_view"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:cardCornerRadius="10dp"
          android:layout_margin="4dp"
          app:cardElevation="8dp">
         <com.synnapps.carouselview.CarouselView
             android:id="@+id/carousel_view_item_place_act"
             android:layout_width="match_parent"
             android:layout_height="230dp"
             app:fillColor="#FFFFFFFF"
             app:pageColor="#00000000"
             app:radius="6dp"
             app:slideInterval="3000"
             app:strokeColor="#FF777777"
             app:strokeWidth="1dp"
             app:autoPlay="true"
             app:disableAutoPlayOnUserInteraction="true"/>
      </android.support.v7.widget.CardView>


      <android.support.v7.widget.CardView
          android:id="@+id/cv_Place_address_hours_of_work"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:cardCornerRadius="10dp"
          android:layout_margin="4dp"
          app:cardBackgroundColor="@color/colorPrimary"
          app:cardElevation="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/text_sise_act_place_caption"
                   android:textColor="@color/colorCaptionTextActPlace"
                   android:text="@string/address"
                   android:padding="5dp"/>
            <TextView
                android:id="@+id/tv_text_address_place_act"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_sise_act_place_caption"
                android:textColor="@color/colorBlueGrey50"
                android:padding="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_sise_act_place_caption"
                android:textColor="@color/colorCaptionTextActPlace"
                android:text="@string/hours_of_work_place_act"
                android:padding="5dp"/>
            <TextView
                android:id="@+id/tv_text_hours_of_work_place_act"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_sise_act_place_caption"
                android:textColor="@color/colorBlueGrey50"
                android:padding="5dp"/>
        </LinearLayout>
      </android.support.v7.widget.CardView>
       <android.support.v7.widget.CardView
           android:id="@+id/cv_Place_description"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:cardCornerRadius="10dp"
           android:layout_margin="4dp"
           app:cardBackgroundColor="@color/colorPrimary"
           app:cardElevation="8dp">
           <TextView
               android:id="@+id/tv_description_place"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="@dimen/text_sise_act_place_caption"
               android:textColor="@color/colorBlueGrey50"
               android:padding="5dp"/>
       </android.support.v7.widget.CardView>
</LinearLayout>

</android.support.v4.widget.NestedScrollView>
