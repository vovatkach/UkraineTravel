<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vovatkach2427gmail.ukrainetravel.Act.PriewAct">
    <com.synnapps.carouselview.CarouselView
        android:id="@+id/cvPriewAct"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:slideInterval="3000"
        app:fillColor="@color/colorAccent"
        app:pageColor="#00000000"
        app:radius="8dp"
        app:strokeColor="@color/colorWhite"
        app:strokeWidth="1dp"
        app:autoPlay="true"
        app:disableAutoPlayOnUserInteraction="true"
        />

    <Button
        android:id="@+id/btn_go_to_select_city"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="45dp"
        android:text="@string/btn_go_to_select_city"
        android:textColor="@color/colorWhite"
        android:textSize="24sp"
        android:alpha="0.5"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_gravity="bottom"
        android:background="@color/ln_priewact_not_to_show"
        android:orientation="horizontal"
        android:alpha="0.8">

        <CheckBox
            android:id="@+id/cb_not_to_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cb_not_to_show"
            android:textSize="12sp" />
    </LinearLayout>

</FrameLayout>
